<!--INDEX page-->
<!--include header from views/partials-->
<% include ./partials/header %>

<div class="ui main text container">
    <div class="ui huge header">Personal Blog</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <!--loop through each blog object, show its contents(attributes)-->
            <%= blogs.forEach(function(blog){%>
                <div class="item">
                    <div class="image">
                        <img src="<%=blog.image%>">
                    </div>
                    <div class="content">
                        <!--If click header, can open the SHOW page of this blog-->
                        <a class="header" href="/blogs/<%= blog._id %>"><%=blog.title%></a>
                        <!--show date-->
                        <div class="meta">
                            <span><%= blog.created.toDateString() %></span>
                        </div>
                        <!--show only part of blogs-->
                        <div class="description">
                            <p><%= blog.body.substring(0,100) %>...</p>
                        </div>
                        <!--Read More button-->
                        <div class="extra">
                            <a class="ui floated basic violet button" href="/blogs/<%= blog._id %>">
                                Read More
                                <i class="right chevron icon"></i>
                            </a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</div>
<h1>Index Page !</h1>

<!--include footer from views/partials-->
<% include ./partials/footer %>