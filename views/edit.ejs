<!--EDIT page-->
<!--Need to prefill with data from the desired blog. First lookup the actual blog in-->
<!--edit blog-->

<% include ./partials/header %>

<!--Main text area-->
<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= Blog.title %></div>
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            
            <!--Set value attribute to be the title-->
            <input type="text" name="blog[title]" value="<%= blog.title %>">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" value="<%= blog.image %>">
        </div>
        
        <!--textarea doesn't have a "value" attribute. So just put as content-->
        <div class="field">
            <label>Blog Content</label>
            <textarea name="blog[body]"><%= blog.body %></textarea>
        </div>
        <input class="ui green big button" type="submit">
    </form>
</div>


<% include ./partials/footer %>